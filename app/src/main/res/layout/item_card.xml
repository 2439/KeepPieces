<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/bill_symbol_in_card"
        style="?attr/textAppearanceMoney1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥"
        android:textColor="@color/color_on_surface_20"
        app:layout_constraintBottom_toBottomOf="@+id/bill_type_in_card"
        app:layout_constraintStart_toEndOf="@+id/bill_type_in_card"
        app:layout_constraintTop_toTopOf="@+id/bill_type_in_card"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/bill_type_in_card"
        style="?attr/textAppearanceMoney1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:text="-"
        android:textColor="@color/color_on_surface_20"
        app:layout_constraintBottom_toBottomOf="@+id/bill_name_in_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bill_name_in_card"
        app:layout_constraintVertical_bias="0.466" />

    <TextView
        android:id="@+id/bill_name_in_card"
        style="?attr/textAppearanceSubtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="早餐/微信/自己"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/more_information"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:background="#00000000"
        android:gravity="center"
        android:src="@drawable/arrow_right"
        app:layout_constraintBottom_toBottomOf="@+id/bill_amount_in_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bill_amount_in_card"
        app:layout_constraintVertical_bias="0.461" />

    <TextView
        android:id="@+id/bill_amount_in_card"
        style="?attr/textAppearanceMoney1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:gravity="center_vertical"
        android:text="2215.13"
        app:layout_constraintBottom_toBottomOf="@+id/bill_symbol_in_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bill_symbol_in_card"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>