<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/optionspicker"
    android:minHeight="150dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AddPrimaryCategory"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/addPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_dialog_max"
            android:textColorHint="@color/color_on_primary"
            android:autofillHints=""
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:padding="10dp"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AddSecondaryCategory"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/addSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_dialog_max"
            android:textColorHint="@color/color_on_primary"
            android:autofillHints=""
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:padding="10dp"
            android:inputType="text" />
    </LinearLayout>
</LinearLayout>


