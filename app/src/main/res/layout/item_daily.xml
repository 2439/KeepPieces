<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/billType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Lunch"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/billAmount"
        android:layout_marginStart="@dimen/spacing_large"
        style="?attr/textAppearanceSubtitle1"/>

    <TextView
        android:id="@+id/billDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="12/30/18"
        android:layout_marginBottom="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/billType"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/billAmount"
        android:layout_marginStart="@dimen/spacing_large"
        style="?attr/textAppearanceBody2"/>

    <TextView
        android:id="@+id/billAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2,215.13"
        app:layout_constraintTop_toTopOf="@id/billType"
        app:layout_constraintBottom_toBottomOf="@id/billDate"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_large"
        style="?attr/textAppearanceMoney1"/>

    <TextView
        android:id="@+id/text_view_dollar"
        tools:text="-$"
        android:textColor="@color/color_on_surface_20"
        style="?attr/textAppearanceMoney1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias=".6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</androidx.constraintlayout.widget.ConstraintLayout>